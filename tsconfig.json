{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "api/*": ["src/api/*"],
      "reduxApp/*": ["src/redux/*"],
      "pages/*": ["src/pages/*"],
      "components/*": ["src/components/*"],
      "hooks/*": ["src/hooks/*"],
      "config/*": ["src/config/*"],
    },
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "removeComments": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "internals"],
}
